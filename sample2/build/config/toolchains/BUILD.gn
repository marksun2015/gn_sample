declare_args() {  
    toolchain_path = getenv("CLANGCXX")
}

toolchain("linux") {
    cxx = "${toolchain_path}"

    tool("cxx"){
        command = "${cxx} -c {{source}} -o {{output}}"
            outputs = [ "{{source_out_dir}}/{{target_output_name}}.o" ]

    }

    tool("link"){
        exe_name = "{{root_out_dir}}/{{target_output_name}}{{output_extension}}"
            command = "${cxx} {{inputs}} -o $exe_name"
            outputs = ["$exe_name"]
    }
}
